delimiter ////
create procedure cfsec213.sp_delete_tsecmemb_by_groupidx(
	argAuditClusterId bigint,
	argAuditUserId varchar(36),
	argAuditSessionId varchar(36),
	secClusterId bigint,
	secTenantId bigint,
	argTenantId bigint,
	argTSecGroupId integer )
not deterministic
modifies sql data
begin
	declare curRevision int;
	declare subret boolean;
	declare curTenantId bigint;
	declare curTSecGrpMembId bigint;
	declare done int default false;
	declare cur_groupidx cursor for
		select
			a018.tenantid as tenantid,
			a018.tsecgrpmembid as tsecgrpmembid,
			a018.revision as revision
		from cfsec213.TSecMemb as a018
		where
			a018.tenantid = argTenantId
		and a018.tsecgroupid = argTSecGroupId;
	declare cur_groupidx_system cursor for
			select
			a018.tenantid as tenantid,
			a018.tsecgrpmembid as tsecgrpmembid,
					a018.revision as revision
			from cfsec213.TSecMemb as a018
			where
					a018.tenantid = argTenantId
		and a018.tsecgroupid = argTSecGroupId;
	declare cur_groupidx_restricted cursor for
			select
			a018.tenantid as tenantid,
			a018.tsecgrpmembid as tsecgrpmembid,
					a018.revision as revision
			from cfsec213.TSecMemb as a018
			where
					a018.tenantid = argTenantId
		and a018.tsecgroupid = argTSecGroupId
					and a018.TenantId = secTenantId;
	declare continue handler for not found set done = true;

	select cfsec213.sp_is_system_user( argAuditUserId ) into subret;
	if( subret )
	then
		open cur_groupidx_system;
		read_loop_groupidx_system: loop
			fetch cur_groupidx_system into
				curTenantId,
				curTSecGrpMembId,
				curRevision;
			if done then
				leave read_loop_groupidx_system;
			end if;
			call cfsec213.sp_delete_tsecmemb( argAuditClusterId,
						argAuditUserId,
						argAuditSessionId,
						secClusterId,
						secTenantId,
						curTenantId,
						curTSecGrpMembId,
						curRevision );
		end loop;
		close cur_groupidx_system;
	else
		open cur_groupidx_restricted;
		read_loop_groupidx_restricted: loop
			fetch cur_groupidx_restricted into
				curTenantId,
				curTSecGrpMembId,
				curRevision;
			if done then
				leave read_loop_groupidx_restricted;
			end if;
			call cfsec213.sp_delete_tsecmemb( argAuditClusterId,
						argAuditUserId,
						argAuditSessionId,
						secClusterId,
						secTenantId,
						curTenantId,
						curTSecGrpMembId,
						curRevision );
		end loop;
		close cur_groupidx_restricted;
	end if;
end;////
