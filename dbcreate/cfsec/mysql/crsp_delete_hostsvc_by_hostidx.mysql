delimiter ////
create procedure cfsec213.sp_delete_hostsvc_by_hostidx(
	argAuditClusterId bigint,
	argAuditUserId varchar(36),
	argAuditSessionId varchar(36),
	secClusterId bigint,
	secTenantId bigint,
	argClusterId bigint,
	argHostNodeId bigint )
not deterministic
modifies sql data
begin
	declare curRevision int;
	declare subret boolean;
	declare curClusterId bigint;
	declare curServiceId bigint;
	declare done int default false;
	declare cur_hostidx cursor for
		select
			a012.clusterid as clusterid,
			a012.serviceid as serviceid,
			a012.revision as revision
		from cfsec213.HostSvc as a012
		where
			a012.clusterid = argClusterId
		and a012.hostnodeid = argHostNodeId;
	declare cur_hostidx_system cursor for
			select
			a012.clusterid as clusterid,
			a012.serviceid as serviceid,
					a012.revision as revision
			from cfsec213.HostSvc as a012
			where
					a012.clusterid = argClusterId
		and a012.hostnodeid = argHostNodeId;
	declare cur_hostidx_restricted cursor for
			select
			a012.clusterid as clusterid,
			a012.serviceid as serviceid,
					a012.revision as revision
			from cfsec213.HostSvc as a012
			where
					a012.clusterid = argClusterId
		and a012.hostnodeid = argHostNodeId
					and a012.ClusterId = secClusterId;
	declare continue handler for not found set done = true;

	select cfsec213.sp_is_system_user( argAuditUserId ) into subret;
	if( subret )
	then
		open cur_hostidx_system;
		read_loop_hostidx_system: loop
			fetch cur_hostidx_system into
				curClusterId,
				curServiceId,
				curRevision;
			if done then
				leave read_loop_hostidx_system;
			end if;
			call cfsec213.sp_delete_hostsvc( argAuditClusterId,
						argAuditUserId,
						argAuditSessionId,
						secClusterId,
						secTenantId,
						curClusterId,
						curServiceId,
						curRevision );
		end loop;
		close cur_hostidx_system;
	else
		open cur_hostidx_restricted;
		read_loop_hostidx_restricted: loop
			fetch cur_hostidx_restricted into
				curClusterId,
				curServiceId,
				curRevision;
			if done then
				leave read_loop_hostidx_restricted;
			end if;
			call cfsec213.sp_delete_hostsvc( argAuditClusterId,
						argAuditUserId,
						argAuditSessionId,
						secClusterId,
						secTenantId,
						curClusterId,
						curServiceId,
						curRevision );
		end loop;
		close cur_hostidx_restricted;
	end if;
end;////
