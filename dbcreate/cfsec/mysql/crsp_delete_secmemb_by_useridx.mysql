delimiter ////
create procedure cfsec213.sp_delete_secmemb_by_useridx(
	argAuditClusterId bigint,
	argAuditUserId varchar(36),
	argAuditSessionId varchar(36),
	secClusterId bigint,
	secTenantId bigint,
	argSecUserId varchar(36) )
not deterministic
modifies sql data
begin
	declare curRevision int;
	declare subret boolean;
	declare curClusterId bigint;
	declare curSecGrpMembId bigint;
	declare done int default false;
	declare cur_useridx cursor for
		select
			a00f.clusterid as clusterid,
			a00f.secgrpmembid as secgrpmembid,
			a00f.revision as revision
		from cfsec213.SecMemb as a00f
		where
			a00f.secuserid = argSecUserId;
	declare cur_useridx_system cursor for
			select
			a00f.clusterid as clusterid,
			a00f.secgrpmembid as secgrpmembid,
					a00f.revision as revision
			from cfsec213.SecMemb as a00f
			where
					a00f.secuserid = argSecUserId;
	declare cur_useridx_restricted cursor for
			select
			a00f.clusterid as clusterid,
			a00f.secgrpmembid as secgrpmembid,
					a00f.revision as revision
			from cfsec213.SecMemb as a00f
			where
					a00f.secuserid = argSecUserId
					and a00f.ClusterId = secClusterId;
	declare continue handler for not found set done = true;

	select cfsec213.sp_is_system_user( argAuditUserId ) into subret;
	if( subret )
	then
		open cur_useridx_system;
		read_loop_useridx_system: loop
			fetch cur_useridx_system into
				curClusterId,
				curSecGrpMembId,
				curRevision;
			if done then
				leave read_loop_useridx_system;
			end if;
			call cfsec213.sp_delete_secmemb( argAuditClusterId,
						argAuditUserId,
						argAuditSessionId,
						secClusterId,
						secTenantId,
						curClusterId,
						curSecGrpMembId,
						curRevision );
		end loop;
		close cur_useridx_system;
	else
		open cur_useridx_restricted;
		read_loop_useridx_restricted: loop
			fetch cur_useridx_restricted into
				curClusterId,
				curSecGrpMembId,
				curRevision;
			if done then
				leave read_loop_useridx_restricted;
			end if;
			call cfsec213.sp_delete_secmemb( argAuditClusterId,
						argAuditUserId,
						argAuditSessionId,
						secClusterId,
						secTenantId,
						curClusterId,
						curSecGrpMembId,
						curRevision );
		end loop;
		close cur_useridx_restricted;
	end if;
end;////
