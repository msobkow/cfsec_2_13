delimiter ////
create procedure cfsec213.sp_delete_clus_by_udomnameidx(
	argAuditClusterId bigint,
	argAuditUserId varchar(36),
	argAuditSessionId varchar(36),
	secClusterId bigint,
	secTenantId bigint,
	argFullDomName varchar(192) )
not deterministic
modifies sql data
begin
	declare curRevision int;
	declare subret boolean;
	declare curId bigint;
	declare done int default false;
	declare cur_udomnameidx cursor for
		select
			a001.id as id,
			a001.revision as revision
		from cfsec213.clus as a001
		where
			a001.fulldomname = argFullDomName;
	declare cur_udomnameidx_normal cursor for
		select
			a001.id as id,
				a001.revision as revision
		from cfsec213.clus as a001
		where
				a001.fulldomname = argFullDomName;
	declare continue handler for not found set done = true;

	open cur_udomnameidx_normal;
	read_loop_udomnameidx_normal: loop
		fetch cur_udomnameidx_normal into
				curId,
				curRevision;
		if done then
			leave read_loop_udomnameidx_normal;
		end if;
			call cfsec213.sp_delete_clus( argAuditClusterId,
						argAuditUserId,
						argAuditSessionId,
						secClusterId,
						secTenantId,
						curId,
						curRevision );
	end loop;
	close cur_udomnameidx_normal;
end;////
