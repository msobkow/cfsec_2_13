delimiter ////
create function cfsec213.sp_next_isoccyidgen()
returns smallint
modifies sql data
not deterministic
begin
	declare SliceId smallint default 101;
	declare NextId smallint;

	if not exists (
		select *
		from cfsec213.CFSec213_idg16
		where slice_id = SliceId )
	then
		insert into cfsec213.CFSec213_idg16 (
			slice_id,
			next_id )
		values (
			SliceId,
			1 );
	end if;

	select next_id
	into NextId
	from cfsec213.CFSec213_idg16
	where slice_id = SliceId
	for update;

	update cfsec213.CFSec213_idg16
	set next_id = NextId + 1
	where slice_id = SliceId;

	return NextId;
end;////
