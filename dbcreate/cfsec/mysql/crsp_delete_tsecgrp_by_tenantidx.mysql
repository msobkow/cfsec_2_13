delimiter ////
create procedure cfsec213.sp_delete_tsecgrp_by_tenantidx(
	argAuditClusterId bigint,
	argAuditUserId varchar(36),
	argAuditSessionId varchar(36),
	secClusterId bigint,
	secTenantId bigint,
	argTenantId bigint )
not deterministic
modifies sql data
begin
	declare curRevision int;
	declare subret boolean;
	declare curTenantId bigint;
	declare curTSecGroupId integer;
	declare done int default false;
	declare cur_tenantidx cursor for
		select
			a016.tenantid as tenantid,
			a016.tsecgroupid as tsecgroupid,
			a016.revision as revision
		from cfsec213.TSecGrp as a016
		where
			a016.tenantid = argTenantId;
	declare cur_tenantidx_system cursor for
			select
			a016.tenantid as tenantid,
			a016.tsecgroupid as tsecgroupid,
					a016.revision as revision
			from cfsec213.TSecGrp as a016
			where
					a016.tenantid = argTenantId;
	declare cur_tenantidx_restricted cursor for
			select
			a016.tenantid as tenantid,
			a016.tsecgroupid as tsecgroupid,
					a016.revision as revision
			from cfsec213.TSecGrp as a016
			where
					a016.tenantid = argTenantId
					and a016.TenantId = secTenantId;
	declare continue handler for not found set done = true;

	select cfsec213.sp_is_system_user( argAuditUserId ) into subret;
	if( subret )
	then
		open cur_tenantidx_system;
		read_loop_tenantidx_system: loop
			fetch cur_tenantidx_system into
				curTenantId,
				curTSecGroupId,
				curRevision;
			if done then
				leave read_loop_tenantidx_system;
			end if;
			call cfsec213.sp_delete_tsecgrp( argAuditClusterId,
						argAuditUserId,
						argAuditSessionId,
						secClusterId,
						secTenantId,
						curTenantId,
						curTSecGroupId,
						curRevision );
		end loop;
		close cur_tenantidx_system;
	else
		open cur_tenantidx_restricted;
		read_loop_tenantidx_restricted: loop
			fetch cur_tenantidx_restricted into
				curTenantId,
				curTSecGroupId,
				curRevision;
			if done then
				leave read_loop_tenantidx_restricted;
			end if;
			call cfsec213.sp_delete_tsecgrp( argAuditClusterId,
						argAuditUserId,
						argAuditSessionId,
						secClusterId,
						secTenantId,
						curTenantId,
						curTSecGroupId,
						curRevision );
		end loop;
		close cur_tenantidx_restricted;
	end if;
end;////
