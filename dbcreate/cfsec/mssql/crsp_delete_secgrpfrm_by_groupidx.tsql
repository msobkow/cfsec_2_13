use cfsec213
go

create proc sp_delete_secgrpfrm_by_groupidx(
	@argAuditClusterId bigint,
	@argAuditUserId varchar(36),
	@argAuditSessionId varchar(36),
	@secClusterId bigint,
	@secTenantId bigint,
	@argClusterId decimal(21,0),
	@argSecGroupId integer )
as
	declare @varClusterId CFSec213ClusterIdGenSeq
	declare @varSecGroupFormId CFSec213SecGroupFormIdGen
	declare @varRevision int
	declare @retval int
	declare cursNormalSecGrpFrmGroupIdx cursor local for
		select
			a00d.clusid as clusid,
			a00d.secgrpfrmid as secgrpfrmid,
			a00d.revision as revision
		from cfsec213..SecGrpFrm as a00d
		where
			a00d.clusid = @argClusterId
			and a00d.secgrpid = @argSecGroupId
	declare cursRestrictSecGrpFrmGroupIdx cursor local for
		select
			a00d.clusid as clusid,
			a00d.secgrpfrmid as secgrpfrmid,
			a00d.revision as revision
		from cfsec213..SecGrpFrm as a00d
		where
			a00d.clusid = @argClusterId
			and a00d.secgrpid = @argSecGroupId
			and a00d.clusid = @secClusterId
begin
	exec sp_is_system_user @retval output, @argAuditUserId
	if( @retval = 1 )
	begin
		open cursNormalSecGrpFrmGroupIdx
		fetch next from cursNormalSecGrpFrmGroupIdx into
				@varClusterId,
				@varSecGroupFormId,
				@varRevision
		while ( @@fetch_status = 0 )
		begin
				exec sp_delete_secgrpfrm @argAuditClusterId,
						@argAuditUserId,
						@argAuditSessionId,
						@secClusterId,
						@secTenantId,
						@varClusterId,
						@varSecGroupFormId,
						@varRevision
			fetch next from cursNormalSecGrpFrmGroupIdx into
				@varClusterId,
				@varSecGroupFormId,
				@varRevision
		end
		close cursNormalSecGrpFrmGroupIdx
		deallocate cursNormalSecGrpFrmGroupIdx
	end
	else begin
		open cursRestrictSecGrpFrmGroupIdx
		fetch next from cursRestrictSecGrpFrmGroupIdx into
				@varClusterId,
				@varSecGroupFormId,
				@varRevision
		while ( @@fetch_status = 0 )
		begin
				exec sp_delete_secgrpfrm @argAuditClusterId,
						@argAuditUserId,
						@argAuditSessionId,
						@secClusterId,
						@secTenantId,
						@varClusterId,
						@varSecGroupFormId,
						@varRevision
			fetch next from cursRestrictSecGrpFrmGroupIdx into
				@varClusterId,
				@varSecGroupFormId,
				@varRevision
		end
		close cursRestrictSecGrpFrmGroupIdx
		deallocate cursRestrictSecGrpFrmGroupIdx
	end
end
go

quit
