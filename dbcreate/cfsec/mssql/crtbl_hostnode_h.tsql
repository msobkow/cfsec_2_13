use cfsec213
go

create table cfsec213..HostNode_h (
	clusterid	DECIMAL(21,0) NOT NULL,
	hostnodeid	DECIMAL(21,0) NOT NULL,
	revision	int NOT NULL,
	auditclusterid	CFSec213ClusterIdGenSeq not null,
		constraint chk_hostnode_h_auditcluster
			foreign key ( auditclusterid )
			references cfsec213..clus( id ),
	auditsessionid	CFSec213SecSessionIdGen not null,
		constraint chk_hostnode_h_auditsession
			foreign key ( auditsessionid )
			references cfsec213..SecSess( secsessionid ),
	description	VARCHAR(255) NOT NULL,
	hostname	VARCHAR(192) NOT NULL,
	auditaction	CFSec213AuditActionEnum not null,
	auditstamp	datetime2 not null )
go


quit
