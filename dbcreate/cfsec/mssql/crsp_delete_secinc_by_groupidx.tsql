use cfsec213
go

create proc sp_delete_secinc_by_groupidx(
	@argAuditClusterId bigint,
	@argAuditUserId varchar(36),
	@argAuditSessionId varchar(36),
	@secClusterId bigint,
	@secTenantId bigint,
	@argClusterId decimal(21,0),
	@argSecGroupId integer )
as
	declare @varClusterId CFSec213ClusterIdGenSeq
	declare @varSecGrpIncId CFSec213SecGrpIncIdGen
	declare @varRevision int
	declare @retval int
	declare cursNormalSecIncGroupIdx cursor local for
		select
			a00e.clusid as clusid,
			a00e.secgrpincid as secgrpincid,
			a00e.revision as revision
		from cfsec213..SecInc as a00e
		where
			a00e.clusid = @argClusterId
			and a00e.secgrpid = @argSecGroupId
	declare cursRestrictSecIncGroupIdx cursor local for
		select
			a00e.clusid as clusid,
			a00e.secgrpincid as secgrpincid,
			a00e.revision as revision
		from cfsec213..SecInc as a00e
		where
			a00e.clusid = @argClusterId
			and a00e.secgrpid = @argSecGroupId
			and a00e.clusid = @secClusterId
begin
	exec sp_is_system_user @retval output, @argAuditUserId
	if( @retval = 1 )
	begin
		open cursNormalSecIncGroupIdx
		fetch next from cursNormalSecIncGroupIdx into
				@varClusterId,
				@varSecGrpIncId,
				@varRevision
		while ( @@fetch_status = 0 )
		begin
				exec sp_delete_secinc @argAuditClusterId,
						@argAuditUserId,
						@argAuditSessionId,
						@secClusterId,
						@secTenantId,
						@varClusterId,
						@varSecGrpIncId,
						@varRevision
			fetch next from cursNormalSecIncGroupIdx into
				@varClusterId,
				@varSecGrpIncId,
				@varRevision
		end
		close cursNormalSecIncGroupIdx
		deallocate cursNormalSecIncGroupIdx
	end
	else begin
		open cursRestrictSecIncGroupIdx
		fetch next from cursRestrictSecIncGroupIdx into
				@varClusterId,
				@varSecGrpIncId,
				@varRevision
		while ( @@fetch_status = 0 )
		begin
				exec sp_delete_secinc @argAuditClusterId,
						@argAuditUserId,
						@argAuditSessionId,
						@secClusterId,
						@secTenantId,
						@varClusterId,
						@varSecGrpIncId,
						@varRevision
			fetch next from cursRestrictSecIncGroupIdx into
				@varClusterId,
				@varSecGrpIncId,
				@varRevision
		end
		close cursRestrictSecIncGroupIdx
		deallocate cursRestrictSecIncGroupIdx
	end
end
go

quit
