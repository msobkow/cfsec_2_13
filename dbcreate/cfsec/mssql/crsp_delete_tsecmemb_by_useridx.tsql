use cfsec213
go

create proc sp_delete_tsecmemb_by_useridx(
	@argAuditClusterId bigint,
	@argAuditUserId varchar(36),
	@argAuditSessionId varchar(36),
	@secClusterId bigint,
	@secTenantId bigint,
	@argSecUserId varchar(36) )
as
	declare @varTenantId CFSec213TenantIdGenSeq
	declare @varTSecGrpMembId CFSec213TSecGrpMembIdGen
	declare @varRevision int
	declare @retval int
	declare cursNormalTSecMembUserIdx cursor local for
		select
			a018.tenantid as tenantid,
			a018.tsecgrpmembid as tsecgrpmembid,
			a018.revision as revision
		from cfsec213..TSecMemb as a018
		where
			a018.secuserid = @argSecUserId
	declare cursRestrictTSecMembUserIdx cursor local for
		select
			a018.tenantid as tenantid,
			a018.tsecgrpmembid as tsecgrpmembid,
			a018.revision as revision
		from cfsec213..TSecMemb as a018
		where
			a018.secuserid = @argSecUserId
			and a018.tenantid = @secTenantId
begin
	exec sp_is_system_user @retval output, @argAuditUserId
	if( @retval = 1 )
	begin
		open cursNormalTSecMembUserIdx
		fetch next from cursNormalTSecMembUserIdx into
				@varTenantId,
				@varTSecGrpMembId,
				@varRevision
		while ( @@fetch_status = 0 )
		begin
				exec sp_delete_tsecmemb @argAuditClusterId,
						@argAuditUserId,
						@argAuditSessionId,
						@secClusterId,
						@secTenantId,
						@varTenantId,
						@varTSecGrpMembId,
						@varRevision
			fetch next from cursNormalTSecMembUserIdx into
				@varTenantId,
				@varTSecGrpMembId,
				@varRevision
		end
		close cursNormalTSecMembUserIdx
		deallocate cursNormalTSecMembUserIdx
	end
	else begin
		open cursRestrictTSecMembUserIdx
		fetch next from cursRestrictTSecMembUserIdx into
				@varTenantId,
				@varTSecGrpMembId,
				@varRevision
		while ( @@fetch_status = 0 )
		begin
				exec sp_delete_tsecmemb @argAuditClusterId,
						@argAuditUserId,
						@argAuditSessionId,
						@secClusterId,
						@secTenantId,
						@varTenantId,
						@varTSecGrpMembId,
						@varRevision
			fetch next from cursRestrictTSecMembUserIdx into
				@varTenantId,
				@varTSecGrpMembId,
				@varRevision
		end
		close cursRestrictTSecMembUserIdx
		deallocate cursRestrictTSecMembUserIdx
	end
end
go

quit
