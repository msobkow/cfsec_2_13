use cfsec213
go

create proc sp_delete_isotz_by_offsetidx(
	@argAuditClusterId bigint,
	@argAuditUserId varchar(36),
	@argAuditSessionId varchar(36),
	@secClusterId bigint,
	@secTenantId bigint,
	@argTZHourOffset smallint,
	@argTZMinOffset smallint )
as
	declare @varISOTZoneId CFSec213ISOTZoneIdGenSeq
	declare @varRevision int
	declare @retval int
	declare cursNormalISOTzOffsetIdx cursor local for
		select
			a008.isotzoneid as isotzoneid,
			a008.revision as revision
		from cfsec213..ISOTz as a008
		where
			a008.tzhouroffset = @argTZHourOffset
			and a008.tzminoffset = @argTZMinOffset
begin
	open cursNormalISOTzOffsetIdx
	fetch next from cursNormalISOTzOffsetIdx into
				@varISOTZoneId,
				@varRevision
	while ( @@fetch_status = 0 )
	begin
				exec sp_delete_isotz @argAuditClusterId,
						@argAuditUserId,
						@argAuditSessionId,
						@secClusterId,
						@secTenantId,
						@varISOTZoneId,
						@varRevision
		fetch next from cursNormalISOTzOffsetIdx into
				@varISOTZoneId,
				@varRevision
	end
	close cursNormalISOTzOffsetIdx
	deallocate cursNormalISOTzOffsetIdx
end
go

quit
